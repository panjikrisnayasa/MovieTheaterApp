<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieTheaterApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chinese_black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/light_goldenrod_yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/golden_yellow</item>
        <item name="colorSecondaryVariant">@color/golden_poppy</item>
        <item name="colorOnSecondary">@color/chinese_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/mada_regular</item>
    </style>
</resources>